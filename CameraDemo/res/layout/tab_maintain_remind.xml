<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.child.FragmentMaintainRemind" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/maintain_top_layout" />

    <include
        android:id="@+id/include_list_content_of_maintain_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_list_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/layout_string_hint_infomation"
        android:textSize="25sp" />

</LinearLayout>