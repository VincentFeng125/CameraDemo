<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:id="@+id/item_scheduled"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/common_child_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layout_string_scheduled" />

            <View
                android:id="@+id/img_scheduled"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_scheduling"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/common_child_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layout_string_scheduling" />

            <View
                android:id="@+id/img_scheduling"
                android:layout_width="wrap_content"
                android:layout_height="3dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_schedule_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/pic_schedule_edit" />

</RelativeLayout>