<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NoTitleDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="common_title_style">
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="common_child_title_style" parent="common_title_style">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="common_radio_no_button_style" parent="common_radio_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/select_radio_bg</item>
    </style>

    <style name="common_radio_style">
        <item name="android:textSize">25sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="maintain_tab_style" parent="common_radio_no_button_style">
        <item name="android:padding">30dp</item>
    </style>

    <style name="fragment_listview_common_style">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="common_text_style">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="list_item_common_style">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>